
 @model Fix_All.Models.Add_labor_Category
@{
    ViewData["AdminTitle"] = "Add_Labor_Category";
    Layout = "_Admin_layout";
}
<br/>
<main class="ease-soft-in-out xl:ml-68.5 relative h-full max-h-screen rounded-xl transition-all duration-200">


<div class="flex flex-wrap -mx-3">
    <div class="flex-none w-full max-w-full px-3">
        <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 border-transparent border-solid shadow-soft-xl rounded-2xl bg-clip-border">
            <div class="p-6 pb-0 mb-0 bg-white border-b-0 border-b-solid rounded-t-2xl border-b-transparent flex justify-between items-center">
                <h6>Labor Categories</h6>

                <!-- Button to Open Modal -->
                <button type="button"
                        class="inline-block px-6 py-3 mb-0 text-xs font-bold text-center uppercase align-middle transition-all bg-gradient-to-tl from-blue-600 to-cyan-400 border-0 rounded-lg shadow-md text-white"
                        data-bs-toggle="modal"
                        data-bs-target="#addLaborCategoryModal">
                    + Add Labor Category
                </button>
            </div>

            <div class="flex-auto px-0 pt-0 pb-2">
                <div class="p-0 overflow-x-auto">
                    <table class="items-center justify-center w-full mb-0 align-top border-gray-200 text-slate-500">
                        <thead class="align-bottom">
                            <tr>
                                <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">#</th>
                                <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Category Name</th>
                                <th class="px-6 py-3 font-semibold capitalize align-middle bg-transparent border-b border-gray-200 border-solid shadow-none tracking-none whitespace-nowrap"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Example row -->
                            <tr>
                                <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">1</td>
                                <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">Example Category</td>
                                <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                    <button class="text-slate-400">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                </td>
                            </tr>
                            <!-- Replace above with loop if using a list -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addLaborCategoryModal" tabindex="-1" aria-labelledby="addLaborCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
                <form asp-action="Add_Labor_Category" asp-controller="Admin">
                <div class="modal-header">
                    <h5 class="modal-title" id="addLaborCategoryModalLabel">Add Labor Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="category_name" class="form-label"></label>
                        <input asp-for="category_name" class="form-control" />
                        <span asp-validation-for="category_name" class="text-danger"></span>
                    </div>
                </div>

                    <div class="modal-footer">
                        <button type="button"
                                class="inline-block px-4 py-2 text-sm font-semibold text-gray-700 bg-gray-200 rounded hover:bg-gray-300"
                                data-bs-dismiss="modal">
                            Close
                        </button>

                        <button type="submit"
                                class="inline-block px-4 py-2 text-sm font-semibold text-gray-700 bg-gray-200 rounded hover:bg-gray-300">
                            Save
                        </button>
                    </div>

            </form>
        </div>
    </div>
</div>

</main>