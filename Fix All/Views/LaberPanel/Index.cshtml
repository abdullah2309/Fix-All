@model Fix_All.Models.approve_laber
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_labar_panel.cshtml";
}

<div class="container-fluid">
    <h2 class="mb-4">👋 Welcome, @Model.FirstName @Model.LastName</h2>
    </br>

    <!-- Top Row -->
    <div class="row">
        <!-- Profile Card -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body text-center">
                    <img src="@(Model.ProfileImagePath ?? "/images/default-profile.png")" class="rounded-circle mb-3" width="100" height="100" alt="Profile" />
                    <h4>@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted">@Model.Skills</p>
                    <p><i class="bi bi-envelope"></i> @Model.Email</p>
                    <p><i class="bi bi-telephone"></i> @Model.Phone</p>
                    <p><i class="bi bi-geo-alt"></i> @Model.Address</p>
                    <a asp-action="viewprofile" class="btn btn-warning btn-sm">✏️ Edit Profile</a>
                </div>
            </div>
        </div>

        <!-- Notifications / Alerts -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <h5 class="card-title">🔔 Booking Alerts</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">New Booking from <strong>Ali</strong> 📅 25-Aug-2025</li>
                        <li class="list-group-item">Pending Approval ⚠️</li>
                        <li class="list-group-item">2 Completed Jobs ✅</li>
                    </ul>
                    <a asp-action="LaborBooking" class="btn btn-primary btn-sm mt-3">View All Bookings</a>
                </div>
            </div>
        </div>

        <!-- Chat Shortcut -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <h5 class="card-title">💬 Chat</h5>
                    <p>Stay connected with your customers instantly.</p>
                    
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Bookings Table -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <h5 class="card-title">📅 Recent Bookings</h5>
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Customer</th>
                                <th>Service</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Ali Khan</td>
                                <td>Plumbing</td>
                                <td>26-Aug-2025</td>
                                <td><span class="badge bg-warning">Pending</span></td>
                                <td><a href="#" class="btn btn-sm btn-primary">View</a></td>
                            </tr>
                            <tr>
                                <td>Sara</td>
                                <td>Electric Work</td>
                                <td>20-Aug-2025</td>
                                <td><span class="badge bg-success">Completed</span></td>
                                <td><a href="#" class="btn btn-sm btn-secondary">Details</a></td>
                            </tr>
                            <tr>
                                <td>Ahmed</td>
                                <td>Carpentry</td>
                                <td>15-Aug-2025</td>
                                <td><span class="badge bg-danger">Cancelled</span></td>
                                <td><a href="#" class="btn btn-sm btn-danger">Delete</a></td>
                            </tr>
                        </tbody>
                    </table>
                    <a asp-action="LaborBooking" class="btn btn-outline-dark btn-sm">View All</a>
                </div>
            </div>
        </div>
    </div>
</div>
