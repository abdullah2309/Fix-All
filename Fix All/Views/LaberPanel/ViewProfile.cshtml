@model Fix_All.Models.approve_laber
@{
    ViewData["Title"] = "Labor Profile";
    Layout = "~/Views/Shared/_labar_panel.cshtml";
}

<div class="card shadow-lg mb-4">
    <!-- Cover Image -->
    <div class="position-relative">
        <img src="@(Model.CoverImagePath ?? "/images/default-cover.jpg")"
             class="w-100 rounded-top" style="height: 250px; object-fit: cover;" />

        <!-- Profile Image -->
        <img src="@(Model.ProfileImagePath ?? "/images/default-profile.png")"
             class="rounded-circle border border-3 border-white position-absolute"
             style="width: 120px; height: 120px; top: 180px; left: 30px;" />
    </div>

    <div class="card-body mt-5">
        <!-- Name + Headline -->
        <h3>@Model.FirstName @Model.LastName</h3>
        <h5 class="text-muted">@Model.Headline</h5>
        <p><i class="bi bi-geo-alt"></i> @Model.Address</p>

        <!-- About -->
        @if (!string.IsNullOrEmpty(Model.About))
        {
            <p class="mt-3">@Model.About</p>
        }

        <!-- Skills -->
        @if (!string.IsNullOrEmpty(Model.Skills))
        {
            <div class="mb-3">
                <strong>Skills: </strong>
                @foreach (var skill in Model.Skills.Split(','))
                {
                    <span class="badge bg-info text-dark me-1">@skill.Trim()</span>
                }
            </div>
        }

        <!-- Contact Info -->
        <div class="mb-3">
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone:</strong> @Model.Phone</p>
            <p><strong>CNIC:</strong> @Model.CNIC</p>
            <p><strong>Education:</strong> @Model.Education</p>
            <p><strong>Experience:</strong> @Model.Experience</p>
            <p>
                <strong>Status:</strong>
                <span class="badge bg-secondary">@Model.Status</span>
            </p>
        </div>

        <!-- Social Links -->
        <div class="mt-3">
            @if (!string.IsNullOrEmpty(Model.LinkedInUrl))
            {
                <a href="@Model.LinkedInUrl" class="btn btn-outline-primary btn-sm me-2" target="_blank">
                    <i class="bi bi-linkedin"></i> LinkedIn
                </a>
            }
            @if (!string.IsNullOrEmpty(Model.FacebookUrl))
            {
                <a href="@Model.FacebookUrl" class="btn btn-outline-primary btn-sm me-2" target="_blank">
                    <i class="bi bi-facebook"></i> Facebook
                </a>
            }
            @if (!string.IsNullOrEmpty(Model.PortfolioUrl))
            {
                <a href="@Model.PortfolioUrl" class="btn btn-outline-dark btn-sm" target="_blank">
                    <i class="bi bi-globe"></i> Portfolio
                </a>
            }
        </div>

        <!-- CV Download -->
        @if (!string.IsNullOrEmpty(Model.CVFilePath))
        {
            <div class="mt-3">
                <a href="@Model.CVFilePath" class="btn btn-success btn-sm" target="_blank">
                    📄 Download CV
                </a>
            </div>
        }

        <!-- Edit Button -->
        <a asp-action="EditProfile" asp-route-id="@Model.ApproveLarberId"
           class="btn btn-warning mt-4">✏ Edit Profile</a>
    </div>
</div>
