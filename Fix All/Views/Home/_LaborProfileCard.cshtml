@model Fix_All.Models.approve_laber
<div class="col-lg-4 col-md-6 mb-4 wow fadeInUp" data-wow-delay="0.1s">
    <div class="team-item h-100">
        <div class="position-relative overflow-hidden">
            <img class="img-fluid w-100" src="@(Model.ProfileImagePath ?? "/images/default-profile.png")"
                 alt="@Model.FirstName @Model.LastName">
        </div>
        <div class="team-text">
            <div class="bg-light p-2">
                <h5 class="fw-bold mb-0">@Model.FirstName @Model.LastName</h5>
                <small>@(Model.Headline ?? "Labor Worker") , @(Model.Experience) Experience.</small>
            </div>
            <div class="bg-primary text-center p-2">
                <a asp-action="LaborProfile"
                   asp-controller="Home"
                   asp-route-id="@Model.ApproveLarberId"
                   class="btn btn-light btn-sm mt-2">
                    View Profile
                </a>

                <a asp-action="BookNow"
                   asp-controller="Home"
                   asp-route-id="@Model.ApproveLarberId"
                   class="btn btn-warning btn-sm mt-2">
                    Book Now
                </a>
            </div>

        </div>
    </div>
</div>
