@model Fix_All.Models.BookNow
@{
    ViewData["Title"] = "Book Now";
}

<h2>Book Now</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <!-- Hidden field for ApproveLarberId -->
    <input type="hidden" asp-for="ApproveLarberId" value="@ViewBag.LaborId" />

    <!-- Labor Name Display (readonly) -->
    <div class="form-group mb-3">
        <label>Labor Name</label>
        <input type="text" class="form-control" value="@ViewBag.LaborName" readonly />
    </div>

    <!-- Service Field Dropdown -->
    <div class="form-group mb-3">
        <label>Service Field</label>
        <select asp-for="FieldId" class="form-control" asp-items="@(new SelectList(ViewBag.Fields, "FieldId", "FieldName"))">
            <option value="">-- Select Field --</option>
        </select>
        <span asp-validation-for="FieldId" class="text-danger"></span>
    </div>

    <!-- Service Address -->
    <div class="form-group mb-3">
        <label>Service Address</label>
        <input asp-for="ServiceAddress" class="form-control" placeholder="Enter service address" />
        <span asp-validation-for="ServiceAddress" class="text-danger"></span>
    </div>

    <!-- Service Date -->
    <div class="form-group mb-3">
        <label>Service Date</label>
        <input asp-for="ServiceDate" type="date" class="form-control" />
        <span asp-validation-for="ServiceDate" class="text-danger"></span>
    </div>

    <!-- Notes -->
    <div class="form-group mb-3">
        <label>Notes (Optional)</label>
        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional details..."></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Book Now</button>
</form>

}
